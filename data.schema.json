{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "data for KTPC Launcher",
  "type": "object",
  "properties": {
    "games": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "exe": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "year": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 1957
            }
          },
          "tag": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "exe",
          "icon",
          "description",
          "year"
        ]
      }
    }
  },
  "required": [
    "games"
  ]
}